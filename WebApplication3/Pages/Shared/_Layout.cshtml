@using Microsoft.AspNetCore.Identity
@inject SignInManager<WebApplication3.Model.ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - WebApplication3</title>
	<script src="https://www.google.com/recaptcha/api.js?render=6LddevwjAAAAAH3nltABAK_h9mLRkZ2QWxGBZX9V"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/WebApplication3.styles.css" asp-append-version="true" />
</head>
<body>
	<div class="container-fluid  box-shadow mb-3">
		<div class="container border-0">
			<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
				<a asp-page="/Index" class="navbar-brand d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
					Fresh Farm Market
				</a>

				@{
					if (SignInManager.IsSignedIn(User))
					{
						<ul class="nav col-10 col-md-auto mb-2 justify-content-center mb-md-0">
							<li><a class="nav-link px-2 link-dark" asp-area="" asp-page="/Index">Home</a></li>
							<li><a class="nav-link px-2 link-dark" asp-area="" asp-page="/Privacy">Privacy</a></li>
						</ul>

						<ul class="navbar-nav col-2 d-flex justify-content-end">
							<li class="nav-item">
								<a class="btn btn-primary" asp-area="" asp-page="/Logout">Logout</a>
							</li>
						</ul>
					}
					else
					{
						<div class="col-md-3 text-end">
							<a type="button" class="btn btn-outline-primary me-2" asp-area="" asp-page="/Login">Login</a>
							<a type="button" class="btn btn-primary" asp-area="" asp-page="/Register">Register</a>
						</div>
					}
				}



			</header>
		</div>
	</div>


	<div class="container">
		@await Html.PartialAsync("_FlashMessage")
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2022 - WebApplication3 - <a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>